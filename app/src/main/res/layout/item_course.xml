<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvCourseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Kursus"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_course"
            android:fontFamily="@font/poppinsbold"/>

        <TextView
            android:id="@+id/tvProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Provider"
            android:fontFamily="@font/poppinsbold"
            android:textSize="14sp"
            android:textColor="@color/text_course" />

        <TextView
            android:id="@+id/tvEnrolledDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_course"
            android:fontFamily="@font/poppinsbold"
            android:textSize="12sp"
            android:text="Enrolled: 2023-01-01"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="6dp"
            android:text="Status"
            android:textColor="#757575"
            android:fontFamily="@font/poppinsbold"
            android:textSize="13sp"
            android:background="@drawable/bg_status_label"
            android:visibility="gone" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressCourse"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:trackCornerRadius="4dp"
            app:trackThickness="8dp"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="Enroll"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/intrain_primary"
            app:iconTint="@android:color/white"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppinsbold"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>