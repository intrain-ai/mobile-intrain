<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_news_item"
    android:layout_marginBottom="16dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:contentDescription="Gambar Berita"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/newsHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Ini Judul"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinsbold" />

    <TextView
        android:id="@+id/newsSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:fontFamily="@font/poppinsregular"
        android:text="Ini Deskripsi"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_calendar"
            app:tint="#666666" />

        <TextView
            android:id="@+id/newsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginStart="4dp"
            android:text="12 Jun 2023"/>

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:background="#666666"
            android:layout_marginHorizontal="8dp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_news"
            app:tint="#666666" />

        <TextView
            android:id="@+id/newsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginStart="4dp"
            android:text="Kompas.com"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READ MORE"
        android:textSize="11sp"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/transparent"/>
</LinearLayout>