<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_news_item"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <!-- Gambar Berita -->
    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="Ini Gambar Berita"
        tools:ignore="HardcodedText" />

    <!-- Judul -->
    <TextView
        android:id="@+id/newsHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ini Judul"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:fontFamily="@font/poppinsbold"
        android:textColor="#FFFFFF"/>

    <!-- Deskripsi -->
    <TextView
        android:id="@+id/newsSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Ini Deskripsi"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppinsregular" />

    <!-- Info: Tanggal & Sumber -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_calendar"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/newsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="12 Jun 2023"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppinsregular" />

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginHorizontal="8dp"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_news"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/newsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Kompas.com"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppinsregular" />
    </LinearLayout>

</LinearLayout>
